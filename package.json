{
	"name": "job-scout",
	"version": "1.0.1",
	"description": "TypeScript-native job-scout library",
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"files": [
		"dist"
	],
	"packageManager": "bun@1.3.5",
	"scripts": {
		"build": "tsc -p tsconfig.build.json",
		"typecheck": "tsc -p tsconfig.json --noEmit",
		"test": "bun run test:unit",
		"test:unit": "bun test ./test/*.test.ts",
		"test:integration:live": "bun test ./test/integration/live",
		"test:all": "bun run test:unit && bun run test:integration:live",
		"test:watch": "bun test --watch ./test/*.test.ts"
	},
	"engines": {
		"node": ">=20"
	},
	"dependencies": {
		"cheerio": "^1.1.2",
		"turndown": "^7.2.0",
		"undici": "^7.16.0",
		"zod": "^4.1.5"
	},
	"devDependencies": {
		"@types/node": "^24.3.0",
		"@types/turndown": "^5.0.5",
		"typescript": "^5.9.2"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/jeheskielSunloy77/job-scout"
	},
	"keywords": [
		"scraper",
		"job listing",
		"jobs",
		"linkedin",
		"indeed"
	],
	"license": "MIT"
}
